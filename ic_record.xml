<?xml version="1.0" encoding="utf-8"?>
<!--
    Recording Indicator Icon for Thermal AR Glass
    Place in: app/src/main/res/drawable/ic_record.xml
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24">

    <!-- Outer ring (pulsing effect border) -->
    <path
        android:strokeColor="#FF0000"
        android:strokeWidth="1.5"
        android:strokeAlpha="0.6"
        android:fillColor="@android:color/transparent"
        android:pathData="M 12,12 m -10,0 a 10,10 0 1,0 20,0 a 10,10 0 1,0 -20,0" />

    <!-- Inner recording circle (solid red) -->
    <path
        android:fillColor="#FF0000"
        android:fillAlpha="1.0"
        android:pathData="M 12,12 m -7,0 a 7,7 0 1,0 14,0 a 7,7 0 1,0 -14,0" />

    <!-- Small highlight for 3D effect -->
    <path
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.4"
        android:pathData="M 10,9 a 3,3 0 1,1 0,0.1 z" />
</vector>
