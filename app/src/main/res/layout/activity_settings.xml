<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ========== HEADER ========== -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âš™ Glass AR Settings"
        android:textColor="#00FF00"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- System Info -->
    <TextView
        android:id="@+id/system_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading system info..."
        android:textColor="#AAAAAA"
        android:textSize="11sp"
        android:layout_marginBottom="16dp" />

    <!-- ========== NETWORK SECTION ========== -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00FF00"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“¡ NETWORK &amp; SERVER"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Network Info -->
    <TextView
        android:id="@+id/network_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checking network..."
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:background="#1A1A1A"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <!-- Current URL -->
    <TextView
        android:id="@+id/current_url_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current: http://192.168.1.100:8080"
        android:textColor="#00FF00"
        android:textSize="13sp"
        android:layout_marginBottom="8dp" />

    <!-- Server URL Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server URL:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- Server URL Input -->
    <EditText
        android:id="@+id/server_url_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://192.168.1.100:8080"
        android:textColor="#FFFFFF"
        android:textColorHint="#666666"
        android:textSize="16sp"
        android:inputType="textUri"
        android:imeOptions="actionDone"
        android:background="#222222"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Vysor + keyboard to edit â€¢ Format: http://IP:PORT"
        android:textColor="#888888"
        android:textSize="11sp"
        android:layout_marginBottom="12dp" />

    <!-- Test Connection Button -->
    <Button
        android:id="@+id/test_connection_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Connection"
        android:textColor="#FFFFFF"
        android:background="#0066CC"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <!-- Auto-connect -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:background="#1A1A1A"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Auto-connect to server on startup"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/auto_connect_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- Server Frame Rate -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Frame Rate:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp" />

    <Spinner
        android:id="@+id/frame_rate_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- ========== CAMERA SECTION ========== -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00FF00"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“· CAMERA &amp; DISPLAY"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- RGB Fallback -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:background="#1A1A1A"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enable RGB camera fallback"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/rgb_fallback_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- Default Colormap -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Thermal Colormap:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp" />

    <Spinner
        android:id="@+id/colormap_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- ========== RECORDING SECTION ========== -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00FF00"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¥ RECORDING"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Recording Frame Interval -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording Quality:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <Spinner
        android:id="@+id/recording_interval_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Higher FPS = larger file size"
        android:textColor="#888888"
        android:textSize="11sp"
        android:layout_marginBottom="16dp" />

    <!-- ========== INTERFACE SECTION ========== -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00FF00"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ› INTERFACE &amp; FEEDBACK"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Haptic Feedback -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:background="#1A1A1A"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Haptic feedback (vibration)"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/haptic_feedback_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- Audio Feedback -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:background="#1A1A1A"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Audio feedback (camera shutter)"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/audio_feedback_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- Temperature Unit -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature Unit:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp" />

    <Spinner
        android:id="@+id/temp_unit_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <!-- Battery Alert Threshold -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Battery Alert:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <Spinner
        android:id="@+id/battery_alert_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- ========== AI/DETECTION SECTION ========== -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00FF00"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ¤– AI DETECTION"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Detection Confidence -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detection Confidence Threshold:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <Spinner
        android:id="@+id/detection_confidence_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Higher = fewer false positives"
        android:textColor="#888888"
        android:textSize="11sp"
        android:layout_marginBottom="16dp" />

    <!-- ========== ACTION BUTTONS ========== -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00FF00"
        android:layout_marginBottom="12dp" />

    <!-- Save and Cancel Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âœ“ Save Settings"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#00AA00"
            android:layout_marginEnd="8dp"
            android:padding="14dp" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âœ— Cancel"
            android:textColor="#FFFFFF"
            android:background="#666666"
            android:padding="14dp" />
    </LinearLayout>

    <!-- Reset Button -->
    <Button
        android:id="@+id/reset_defaults_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â†º Reset to Defaults"
        android:textColor="#FFFFFF"
        android:background="#CC6600"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Helper Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Tips:\nâ€¢ Use Vysor mouse to click controls\nâ€¢ Press Camera button to exit\nâ€¢ Most changes apply immediately\nâ€¢ Swipe down to dismiss keyboard"
        android:textColor="#888888"
        android:textSize="11sp"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>
</ScrollView>
