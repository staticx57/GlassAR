<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glass AR Settings"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Current URL Display -->
    <TextView
        android:id="@+id/current_url_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current: http://192.168.1.100:8080"
        android:textColor="#00FF00"
        android:textSize="14sp"
        android:layout_marginBottom="20dp" />

    <!-- Server URL Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server URL:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Server URL Input -->
    <EditText
        android:id="@+id/server_url_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://192.168.1.100:8080"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="18sp"
        android:inputType="textUri"
        android:imeOptions="actionDone"
        android:background="#333333"
        android:padding="12dp"
        android:layout_marginBottom="20dp" />

    <!-- Instructions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Vysor + remote keyboard to edit\nFormat: http://IP:PORT"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:layout_marginBottom="20dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444"
        android:layout_marginBottom="20dp" />

    <!-- Auto-connect setting -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Auto-connect to server"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/auto_connect_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- RGB Fallback setting -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enable RGB camera fallback"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/rgb_fallback_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- Default Colormap setting -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Thermal Colormap:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/colormap_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Frame send rate -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Frame Rate (FPS):"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/frame_rate_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:padding="12dp"
        android:layout_marginBottom="30dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Save Button -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:background="#0088FF"
            android:layout_marginEnd="10dp"
            android:padding="12dp" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:background="#888888"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Helper Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nPress Camera button to exit\nChanges apply after app restart"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:layout_marginTop="20dp" />

</LinearLayout>
</ScrollView>
